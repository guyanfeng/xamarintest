<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Test.ColorView">
	<ContentView.Content>
		<Frame OutlineColor="Accent">
			<StackLayout Orientation="Horizontal">
				<BoxView HeightRequest="70" WidthRequest="70" x:Name="box">
				</BoxView>
				<StackLayout>
					<Label x:Name="lblColorName" VerticalOptions="CenterAndExpand">
					</Label>
					<Label x:Name="lblColorValue" VerticalOptions="CenterAndExpand">
					</Label>
				</StackLayout>
			</StackLayout>
		</Frame>
	</ContentView.Content>
</ContentView>